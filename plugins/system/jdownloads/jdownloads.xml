        <authorUrl>www.jdownloads.com</authorUrl>
        <version>2.0.1</version>
		<description>PLG_SYSTEM_JDOWNLOADS_PLUGIN_DESCRIPTION</description>
		<files>
			<filename plugin="jdownloads">jdownloads.php</filename>
			<filename>index.html</filename>
			<folder>language</folder>
		</files>
		<config>
			<fields name="params">
				<fieldset name="basic">
					<field name="use_hider" type="list" description="PLG_SYSTEM_JDOWNLOADS_USE_HIDER_DESC"  label="PLG_SYSTEM_JDOWNLOADS_USE_HIDER_LABEL" default="0"
					>
						<option value="1">PLG_SYSTEM_JDOWNLOADS_YES</option>
						<option value="0">PLG_SYSTEM_JDOWNLOADS_NO</option>
					</field>
					<field name="reduce_log_data_sets_to" type="text" default="" label="PLG_SYSTEM_JDOWNLOADS_SET_MAX_LOGS_LABEL" description="PLG_SYSTEM_JDOWNLOADS_SET_MAX_LOGS_DESC"
					>
					</field>
				</fieldset>			
			</fields>
	</config>	
